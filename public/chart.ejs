<!doctype html>
<html lang="en">
    <head>
        <% include ./partials/shared/head.ejs %>
        <title>Automagic oracle</title>
    </head>
    <body>
      <header><h1>Automagic Oracle</h1></header>
      <main>
        <div class="cnn">
          <div class="controls">
            <h2>Configuration options</h2>
            <p>
              <label for="symbol">Stock symbol: </label>
              <input id="symbol" type="text" name="symbol" placeholder="ex. AAPL" value="aapl" />
            </p>
            <p>
              <label for="value">Training epochs: </label>
              <input id="epochs" type="text" name="epochs" placeholder="ex. 1000" value="1000" />
            </p>
            <p>
              <label for="value">Prediction period: </label>
              <input id="value" type="text" name="value" placeholder="ex. 30" value="50" />
            </p>
            <p>
              <label for="batch">Batch size: </label>
              <input id="batch" type="text" name="batch" placeholder="ex. 10" value="7" />
            </p>
            <p>
              <button id="train">Train</button>
            </p>
          </div>
          <div class="statuses">
            <h2 id="current_activity">Status: waiting for input</h2>
            <h5 id="dataset_length"></h5>
            <h5 id="dataset_start"></h5>
            <h5 id="dataset_end"></h5>
            <h3 id="conclusion"></h3>
          </div>
          <div id="graph1" class="aGraph" style="position:relative;width:100%;height:600px"></div>
        </div>
      </main>
    </body>
    <% include ./partials/shared/scripts.ejs %>
    <script src="/scripts/model.js"></script>
    <script src="/scripts/graph.js"></script>
    <script src="/scripts/domready.js"></script>
</html>
